local p=game.Players.LocalPlayer
local c=p.Character or p.CharacterAdded:Wait()
local h=c:WaitForChild("Humanoid")
local hrp=c:WaitForChild("HumanoidRootPart")
local fps=1
local bad=true
local trip=false
local fastAnim=false


local g=Instance.new("ScreenGui",game.CoreGui)
local f=Instance.new("Frame",g)
f.Size=UDim2.new(0,180,0,200)
f.Position=UDim2.new(0.5,-90,0.5,-100)
f.BackgroundColor3=Color3.fromRGB(40,40,40)
local layout=Instance.new("UIListLayout",f)
layout.Padding=UDim.new(0,5)
layout.HorizontalAlignment=Enum.HorizontalAlignment.Center

local function btn(name,func)
    local b=Instance.new("TextButton",f)
    b.Size=UDim2.new(0,160,0,40)
    b.Text=name;b.TextScaled=true
    b.BackgroundColor3=Color3.fromRGB(60,60,60)
    b.TextColor3=Color3.fromRGB(255,255,255)
    b.MouseButton1Click:Connect(func)
end


btn("Gravity Trip",function()
    trip=not trip
    for _,bf in pairs(hrp:GetChildren()) do if bf:IsA("BodyForce") then bf:Destroy() end end
    if trip then local bf=Instance.new("BodyForce",hrp) bf.Force=Vector3.new(0,h:GetMass()*workspace.Gravity,0) end
end)

btn("Fast Anim",function()
    fastAnim=not fastAnim
    for _,anim in pairs(h:GetChildren()) do
        if anim:IsA("Animation") then
            local t=h:LoadAnimation(anim)
            t:AdjustSpeed(fastAnim and 15 or 1)
            t:Play()
        end
    end
end)

btn("Toggle Bad Wi-Fi",function() bad=not bad end)


task.spawn(function()
    while true do
        if bad then
            if math.random()<0.3 then h.WalkSpeed=0 task.wait(math.random(1,3)/fps) end
            if math.random()<0.5 then hrp.CFrame=hrp.CFrame+Vector3.new(math.random(-5,5),0,math.random(-5,5)) end
            h.WalkSpeed=math.random(2,6)
        else h.WalkSpeed=16 end
        task.wait(1/fps)
    end
end)
